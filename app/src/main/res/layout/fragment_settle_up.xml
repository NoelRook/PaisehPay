<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background1"
    tools:context=".dialogFragments.DialogFragment_Expense">

    <TextView
        android:id="@+id/settle_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settle_up"
        android:layout_marginTop="20dp"
        style="@style/textViewMediumDarkMode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/settle_item_recycle"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/settle_item_recycle"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_margin="20dp"
        android:visibility="visible"
        android:contentDescription="@string/select_group"
        app:layout_constraintTop_toBottomOf="@id/settle_items"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttons_layout"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settle_item_recycle">

        <Button
            android:id="@+id/settle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settle_all"
            style="@style/ButtonLightMode"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/edit_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.95"/>

        <Button
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_expense"
            style="@style/ButtonLightMode"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/settle_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.95"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
