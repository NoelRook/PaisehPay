<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/group_homepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".activities.GroupHomepage">

    <include
        android:id="@+id/toolbar"
        layout= "@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="62dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/expense_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expense_summary"
                android:layout_margin="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/group_summary"
                style="@style/textViewMediumDarkMode"/>

            <Button
                android:id="@+id/group_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/group_settings"
                app:layout_constraintStart_toEndOf="@id/expense_summary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/expense_summary"
                app:layout_constraintBottom_toTopOf="@id/expense_summary"
                style="@style/ButtonBordelessDarkMode"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/group_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/layout_border_highlight1_mode"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/group_settings">

                <TextView
                    android:id="@+id/group_owe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/owe"
                    android:layout_margin="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/group_owe"
                    style="@style/textViewMediumLightMode"/>

                <TextView
                    android:id="@+id/people_owe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/people_owe"
                    android:textAlignment="textStart"
                    app:layout_constraintStart_toStartOf="@id/group_owe"
                    app:layout_constraintTop_toBottomOf="@id/group_owe"
                    style="@style/textViewSmallLightMode"/>


                <TextView
                    android:id="@+id/group_owed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/owed"
                    android:layout_margin="10dp"
                    app:layout_constraintStart_toEndOf="@id/group_owe"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/group_owed"
                    style="@style/textViewMediumLightMode"/>

                <TextView
                    android:id="@+id/people_owed"
                    style="@style/textViewSmallLightMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/people_owed"
                    android:textAlignment="textStart"
                    app:layout_constraintStart_toStartOf="@id/group_owed"
                    app:layout_constraintTop_toBottomOf="@id/group_owed" />

                <TextView
                    android:id="@+id/group_settled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settled_with"
                    android:layout_margin="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/people_owe"
                    app:layout_constraintBottom_toTopOf="@id/people_settled"
                    style="@style/textViewMediumLightMode"/>

                <TextView
                    android:id="@+id/people_settled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/people_settled"
                    android:textAlignment="textStart"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintStart_toStartOf="@id/group_owe"
                    app:layout_constraintTop_toBottomOf="@id/group_settled"
                    app:layout_constraintBottom_toBottomOf="parent"
                    style="@style/textViewSmallLightMode"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/transaction_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transaction_history"
                android:layout_margin="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/group_summary"
                style="@style/textViewMediumDarkMode"/>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/expense_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_border_highlight2_mode"
                android:contentDescription="@string/add"
                app:tabMode="scrollable"
                android:layout_marginVertical="20dp"
                app:tabIndicatorColor="@color/text_colour_light_mode"
                app:tabTextColor="@color/text_colour_light_mode"
                app:tabSelectedTextColor="@color/highlight_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/transaction_history"
                app:layout_constraintBottom_toTopOf="@id/viewPager"/>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/expense_tab_layout"
                app:layout_constraintBottom_toTopOf="@id/expense_filter_fragment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <FrameLayout
                android:id="@+id/expense_filter_fragment"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:layout_margin="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/expense_tab_layout"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
